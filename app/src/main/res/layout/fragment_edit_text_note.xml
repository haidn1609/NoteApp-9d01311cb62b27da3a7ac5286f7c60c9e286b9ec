<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.EditTextNoteFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_opacity"
        android:orientation="vertical">

        <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/et_note_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rich_editor_bar"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/rich_editor_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_rich_edit"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/action_undo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/icon_undo" />

            <ImageView
                android:id="@+id/action_redo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/icon_redo" />

            <ImageView
                android:id="@+id/action_bold"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/icon_bold" />

            <ImageView
                android:id="@+id/action_italic"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/icon_italic" />

            <ImageView
                android:id="@+id/action_strikethroug"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/icon_strikethrough" />

            <ImageView
                android:id="@+id/action_underline"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/icon_underline" />

            <ImageView
                android:id="@+id/action_insert_bullets"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/icon_bullets" />

            <ImageView
                android:id="@+id/action_insert_number"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/icon_numbers" />

            <ImageView
                android:id="@+id/action_blockquote"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/icon_blockquote" />

            <ImageView
                android:id="@+id/action_insert_checkbox"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@android:drawable/checkbox_off_background" />

            <ImageView
                android:id="@+id/action_insert_table"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/icon_bullets" />
        </LinearLayout>
    </RelativeLayout>
</layout>